<Page x:Class="TradeCompany_UI.SpecificOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TradeCompany_UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SpecificOrder">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="0.6*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1" x:Name="Data" HorizontalAlignment="Left" Margin="52,19,0,0" Text="Дата" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="15"/>
            <TextBlock Grid.Column="2" x:Name="ID" HorizontalAlignment="Left" Margin="58,19,0,0" Text="ID" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="15"/>
            <TextBlock x:Name="ClientName" Grid.Column="3" HorizontalAlignment="Left" Margin="47,5,0,0" Text="Клиент" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="15"/>
            <TextBlock Grid.Column="4" x:Name="Adress" HorizontalAlignment="Left" Margin ="60,19,0,0"  Text="Адрес" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="15"/>
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock x:Name="Phone" Grid.Row="1"  HorizontalAlignment="Left" Margin="47,0,0,0" Text="Телефон
" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="15"/>
            </Grid>
        </Grid>

        <DataGrid x:Name="dgSpecificOrder" FontSize="15" Margin="26,34,34,26" Loaded="dgSpecificOrder_Loaded" Grid.Row="1" AutoGenerateColumns="False" RowEditEnding="dgSpecificOrder_RowEditEnding"  >
            <DataGrid.Columns >

                <DataGridTextColumn Binding="{Binding Path= ProductID}" Header="ID Товара" Width="0.2*" />
                <DataGridTextColumn x:Name="Product" Binding="{Binding Path= ProductName, UpdateSourceTrigger=PropertyChanged}" Header="Товар" Width="1*" />
                <DataGridTextColumn  Header="Категория" Width="0.5*"/>
                <DataGridTextColumn Binding="{Binding Path= Price}" Header="Цена" Width="0.5*"/>
                <DataGridTextColumn x:Name="Amount" Binding="{Binding Path = Amount, UpdateSourceTrigger=PropertyChanged}" Header="Количество" Width="0.5*"/>
                <DataGridTextColumn x:Name="ProductMeasureUnit" Header="Единицы измерения" Binding="{Binding Path= ProductMeasureUnit}" Width="0.5*"/>

            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="583*"/>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="172*"/>
                <ColumnDefinition Width="37*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Добавить существующий товар" HorizontalAlignment="Left" Height="30" Margin="27,14,0,0" VerticalAlignment="Top" Width="222" Click="Button_Click"/>
        </Grid>
        <Button x:Name="Refresh" Content="Добавить продукты в заказ" HorizontalAlignment="Left"  Height="32" Margin="283,12,0,0" Grid.Row="2" VerticalAlignment="Top" Width="208" Click="Refresh_Click"/>
    </Grid>
</Page>
