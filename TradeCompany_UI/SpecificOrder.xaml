<Page x:Class="TradeCompany_UI.SpecificOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TradeCompany_UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SpecificOrder">

    <Grid>
        <Grid Background="WhiteSmoke">
            <DataGrid x:Name="dgSpecificOrder" FontSize="15" Margin="5" Loaded="dgSpecificOrder_Loaded">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="№" Width="0.1*"/>
                    <DataGridTextColumn Header="ID Товара" Width="0.3*"/>
                    <DataGridTextColumn Header="Товар" Width="1*"/>
                    <DataGridTextColumn Header="Количество" Width="0.5*"/>
                    <DataGridTextColumn Header="Цена" Width="0.5*"/>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
    </Grid>
</Page>
