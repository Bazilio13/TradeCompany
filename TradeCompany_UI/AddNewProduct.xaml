<Page x:Class="TradeCompany_UI.AddNewProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TradeCompany_UI"
      mc:Ignorable="d"
      Title="AddNewProduct" Width="1041" Height="900">

    <Grid Background="White" Margin="0,0,0,0"  HorizontalAlignment="Right" Width="1031" >
        <Grid.RowDefinitions>
            <RowDefinition Height="1031"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" Text="Добавление товара" TextWrapping="Wrap" VerticalAlignment="Top" Height="28" Width="204" FontSize="22" Margin="0,8,0,0"/>
        <TextBox x:Name="ID_Text" HorizontalAlignment="Left" Margin="239,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="563" SelectionOpacity="1" FontSize="16" IsEnabled="False" Height="25"/>
        <TextBox x:Name="Name_Text" HorizontalAlignment="Left" Margin="239,110,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="563" SelectionOpacity="1" FontSize="16" Height="25" TextChanged="Name_Text_TextChanged"/>
        <ComboBox x:Name="Category" HorizontalAlignment="Left" Margin="239,158,0,0" VerticalAlignment="Top" Width="531" Height="24" DropDownClosed="Category_DropDownClosed" >
            
        </ComboBox>
        <TextBox x:Name="Text_Description" HorizontalAlignment="Left" Margin="239,296,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="563" SelectionOpacity="1" FontSize="16" Height="25"/>
        <TextBox x:Name="Text_RetailPrice" HorizontalAlignment="Left" Margin="239,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" SelectionOpacity="1" FontSize="16" Height="25" TextChanged="Text_RetailPrice_TextChanged"/>
        <TextBox x:Name="Text_WholesalePrice" HorizontalAlignment="Left" Margin="532,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" SelectionOpacity="1" FontSize="16" Height="25" TextChanged="Text_WholesalePrice_TextChanged"/>
        <TextBox x:Name="Text_StockAmount" HorizontalAlignment="Left" Margin="239,250,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="270" SelectionOpacity="1" FontSize="16" Height="24" TextChanged="Text_StockAmount_TextChanged"/>
        <ComboBox x:Name="MeasureUnit" HorizontalAlignment="Left" Margin="532,250,0,0" VerticalAlignment="Top" Width="238" Height="24" BorderBrush="White">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <TextBox x:Name="Text_Comments" HorizontalAlignment="Left" Margin="239,342,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="563" SelectionOpacity="1" FontSize="16" Height="25
                 "/>
        <Button Content="+" HorizontalAlignment="Left" Margin="778,158,0,0" VerticalAlignment="Top" Height="25" Width="24" FontWeight="Bold" Background="White"/>
        <Button Content="+" HorizontalAlignment="Left" Margin="778,250,0,0" VerticalAlignment="Top" Height="24" Width="24" FontWeight="Bold" Background="White"/>
        <TextBlock HorizontalAlignment="Left" Margin="239,42,0,0" Text="ID: " TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" Height="21" Width="23"/>
        <TextBlock HorizontalAlignment="Left" Margin="239,89,0,0" Text="Наименование*" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.543,0.551" FontSize="16" Height="21" Width="135"/>
        <TextBlock HorizontalAlignment="Left" Margin="239,135,0,0" Text="Категория*" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.541,0.711" FontSize="16" Height="21" Width="92"/>
        <TextBlock HorizontalAlignment="Left" Margin="239,181,0,0" Text="Розничная цена*" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.541,0.711" FontSize="16" Height="21" Width="125"/>
        <TextBlock HorizontalAlignment="Left" Margin="532,181,0,0" Text="Оптовая цена*" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.541,0.711" FontSize="16" Height="21" Width="135"/>
        <TextBlock HorizontalAlignment="Left" Margin="239,228,0,0" Text="Количество*" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.541,0.711" FontSize="16" Height="21" Width="113"/>
        <TextBlock HorizontalAlignment="Left" Margin="532,228,0,0" Text="Единица измерения*" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.541,0.711" FontSize="16" Height="21" Width="154"/>
        <TextBlock HorizontalAlignment="Left" Margin="239,274,0,0" Text="Описание / Характеристика" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.541,0.711" FontSize="16" Height="21" Width="227"/>
        <TextBlock HorizontalAlignment="Left" Margin="239,321,0,0" Text="Комментарии" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.541,0.711" FontSize="16" Height="21" Width="101"/>
        <Button x:Name="Buton_Cancel" Content="Отменить" HorizontalAlignment="Left" Margin="340,390,0,0" VerticalAlignment="Top" Height="36" Width="162" FontSize="16" Click="Buton_Cancel_Click"/>
        <Button x:Name="Button_Save" Content="Сохранить" HorizontalAlignment="Left" Margin="532,390,0,0" VerticalAlignment="Top" Height="36" Width="164" FontSize="16" Click="Button_Save_Click"/>
        <Frame Name="frame" NavigationUIVisibility="Hidden" HorizontalAlignment="Left" VerticalAlignment="Top"  Panel.ZIndex="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Width="1000" Height="450"/>
    </Grid>
</Page>
