<Page x:Class="TradeCompany_UI.Orders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TradeCompany_UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Orders">

    <Grid Background="WhiteSmoke">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Name="CreateOrder" Content="Новый заказ" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="25" Width="80"/>

        <TextBox x:Name="Client_Copy" Margin="95,10,0,0" Text="TextBox" TextWrapping="Wrap"  Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200"/>
        <DatePicker Name="MinDate" HorizontalAlignment="Left" Margin="300,10,0,0" VerticalAlignment="Top" Height="25" Width="100"/>
        <DatePicker Name="MaxDate" HorizontalAlignment="Left" Margin="405,10,0,0" VerticalAlignment="Top" Height="25" Width="100"/>
        <DataGrid x:Name="dgOrders" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns >
                <DataGridTextColumn Binding="{Binding Path=ID}" Header="№ заказа" Width="65"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=DateTime}" Header="Дата заказа" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Client}" Header="Клиент" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Summ}" Header="Сумма заказа" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Address}" Header="Адрес" Width="65"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Path=Comment}" Header="Комментарий" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Применить фильтр" HorizontalAlignment="Left" Margin="510,0,0,0" VerticalAlignment="Center" Height="25" Width="117" Click="Button_Click"/>
    </Grid>
</Page>
