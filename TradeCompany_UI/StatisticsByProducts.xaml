<Page x:Class="TradeCompany_UI.StatisticsByProducts"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TradeCompany_UI"
      mc:Ignorable="d" 
      d:DesignHeight="1450"
      Title="StatisticsByProducts">

    <Grid Background="#F9F9F9">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="250"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <ScrollViewer>
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="20,70,20,0">
                <DockPanel Margin="0,0,0,20" HorizontalAlignment="Right">
                    <Button Content="ПО ТОВАРАМ" Margin="0,0,20,0"/>
                    <Button x:Name="StatisticsByClients" Content="ПО КЛИЕНТАМ" Click="StatisticsByClientsButton_Click"/>
                </DockPanel>
                <DockPanel HorizontalAlignment="Stretch" Margin="0,0,0,12">
                    <DatePicker x:Name="PeriodFor" Height="27" Width="112" HorizontalAlignment="Left" CalendarClosed="GroupFilter"/>
                    <DatePicker x:Name="PeriodUntil" Height="27" Width="112" HorizontalAlignment="Left" CalendarClosed="GroupFilter"/> 
                    <Image Source="Pictures/filter.png" Height="28" Margin="0,0,5,0" HorizontalAlignment="Right"/>
                    <Button Content="Год" Margin="0,0,10,0" Click="ButtonYear" HorizontalAlignment="Right"/>
                    <Button Content="Месяц" Margin="0,0,10,0" Click="ButtonMonth" HorizontalAlignment="Right"/>
                    <Button Content="Сегодня" Click="ButtonToday" HorizontalAlignment="Right"/>
                </DockPanel>
                <DockPanel HorizontalAlignment="Left" Width="520" Margin="0,0,0,0">
                    <Button x:Name ="ButtonExit" Content="Назад" Width="100" HorizontalAlignment="Left" Margin="0,2,0,10" Click="ClickExit" />
                </DockPanel>

                <TextBlock x:Name="textBlockLabel" Foreground="#6E304B" Margin="0,-37,0,10" HorizontalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Text="Текст" Width="132" Height="25"/>


                <DataGrid x:Name ="DGAllGroups" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows ="False" CanUserDeleteRows="False" ScrollViewer.CanContentScroll="True" MouseLeftButtonDown="DGCategory_MouseLeftButtonDown">

                    <DataGrid.Columns>
                        <DataGridTextColumn Binding ="{Binding Path = CategoryName}" IsReadOnly="True" Header="Категория" Width="125" MinWidth="125"/>
                        <DataGridTextColumn Binding ="{Binding Path = Amount}" IsReadOnly="True" Header="Количество (заказов)" Width="103" MinWidth="103"/>
                        <DataGridTextColumn Binding ="{Binding Path = Summ }" IsReadOnly="True" Header="Сумма" Width="82" MinWidth="82" />
                        <DataGridTextColumn Binding ="{Binding Path = StockAmount}" IsReadOnly="True" Header="Остаток" Width="82" MinWidth="82"/>
                        <DataGridTextColumn Binding ="{Binding Path = LastSupplyDate}" IsReadOnly="True" Header="Дата последней поставки" Width="82" MinWidth="82"/>
                        <DataGridTextColumn Binding ="{Binding Path = LastOrderDate}" IsReadOnly="True" Header="Дата последнего заказ" Width="*" MinWidth="82"/>
                    </DataGrid.Columns>
                </DataGrid>

                <DataGrid x:Name ="DGProducts" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows ="False" CanUserDeleteRows="False" ScrollViewer.CanContentScroll="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding ="{Binding Path = ID}" IsReadOnly="True" Header="ID" Width="20" MinWidth="30"/>
                        <DataGridTextColumn Binding ="{Binding Path = Name}" IsReadOnly="True" Header="Продукт" Width="125" MinWidth="125"/>
                        <DataGridTextColumn Binding ="{Binding Path = Amount}" IsReadOnly="True" Header="Количество (заказов)" Width="103" MinWidth="103"/>
                        <DataGridTextColumn Binding ="{Binding Path = Summ }" IsReadOnly="True" Header="Сумма" Width="82" MinWidth="82" />
                        <DataGridTextColumn Binding ="{Binding Path = StockAmount}" IsReadOnly="True" Header="Остаток" Width="82" MinWidth="82"/>
                        <DataGridTextColumn Binding ="{Binding Path = LastSupplyDate}" IsReadOnly="True" Header="Дата последней поставки" Width="82" MinWidth="82"/>
                        <DataGridTextColumn Binding ="{Binding Path = LastOrderDate}" IsReadOnly="True" Header="Дата последнего заказ" Width="*" MinWidth="82"/>
                    </DataGrid.Columns>
                </DataGrid>
                
            </StackPanel>
        </ScrollViewer>

        <DockPanel  Grid.Column="1" Margin="0,70,0,0" Width="221">
            <StackPanel DockPanel.Dock="Left" Width="4">
                <Line X1="0" Y1="20" X2="0" Y2="540" Stroke="#6E304B" StrokeThickness="2"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Width="188" DockPanel.Dock="Right" Margin="29,0,0,0">
                <TextBlock HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="0,0,0,35">Фильтр</TextBlock>
                <TextBlock Text="Выбор категории:" TextWrapping="Wrap" Width="149"/>

                <ComboBox x:Name="ProductGroupSelect" HorizontalAlignment="Center" Margin="0,0,0,33" SelectedIndex="0" Height="22" Width="150" Grid.RowSpan="2" IsEditable="True"  DropDownClosed="ProductGroupSelect_DropDownClosed" />

                <TextBlock HorizontalAlignment="Center" FontSize="14" Margin="0,0,0,11">Дата последней поставки:</TextBlock>
                <DatePicker x:Name="DateFromForSupply" HorizontalAlignment="Center" Margin="0,0,0,11" RenderTransformOrigin="0.309,-0.578" Height="28" Width="114" Focusable="False" SelectedDateChanged="GroupFilter"/>
                <DatePicker x:Name="DateUntilForSupply"  HorizontalAlignment="Center" Margin="0,0,0,13" Height="27" Width="112" SelectedDateChanged="GroupFilter"/>

                <TextBlock HorizontalAlignment="Center" FontSize="14" Margin="0,0,0,11">Дата последнего заказа:</TextBlock>
                <DatePicker x:Name="DateFromForOrder" HorizontalAlignment="Center" Margin="0,0,0,11" RenderTransformOrigin="0.309,-0.578" Height="28" Width="114" Focusable="False" SelectedDateChanged="GroupFilter"/>
                <DatePicker x:Name="DateUntilForOrder"  HorizontalAlignment="Center" Margin="0,0,0,13" Height="27" Width="112" SelectedDateChanged="GroupFilter"/>

                <DockPanel  Margin="0,0,0,18">
                    <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" FontSize="14">Количество заказов:</TextBlock>
                    <StackPanel DockPanel.Dock="Right">
                        <TextBlock Margin="30,0,0,0">до</TextBlock>
                        <TextBox x:Name="ToOrdersAmount" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" VerticalContentAlignment="Center" TextAlignment="Center" Width="80" Height="20" PreviewTextInput="ValidationByNumber" TextChanged="GroupFilter"/>
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Left">
                        <TextBlock Margin="30,0,0,0">от</TextBlock>
                        <TextBox x:Name="FromOrdersAmount" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" VerticalContentAlignment="Center" TextAlignment="Center" Height="20" RenderTransformOrigin="0.219,0.561"  PreviewTextInput="ValidationByNumber" TextChanged="GroupFilter"/>
                    </StackPanel>
                </DockPanel>

                

                <DockPanel Margin="0,0,0,5">
                    <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center">Сумма:</TextBlock>

                    <DockPanel DockPanel.Dock="Bottom">
                        <StackPanel DockPanel.Dock="Right">
                            <TextBlock Margin="30,0,0,0">до</TextBlock>
                            <TextBox x:Name="ToPrice" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" TextAlignment="Center" Height="20" Width="80"  PreviewTextInput="ValidationByNumber" TextChanged="GroupFilter"/>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Margin="30,0,0,0">от</TextBlock>
                            <TextBox x:Name="FromPrice" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Center" Width="80" Height="20" VerticalContentAlignment="Center" Text="" TextAlignment="Center"  PreviewTextInput="ValidationByNumber" TextChanged="GroupFilter"/>
                        </StackPanel>
                    </DockPanel>
                </DockPanel>
                              
                <!--<Button x:Name="ApplyFilters" Content="Применить фильтр" HorizontalAlignment="Center" Margin="0,0,0,10"/>-->
                <Button x:Name="ResetFilters" Content="Сбросить фильтр" HorizontalAlignment="Center" Click="clearFilter" Margin="0,20,0,0"/>

            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
