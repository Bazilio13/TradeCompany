<Window x:Class="TradeCompany_UI.DialogWindows.ConfirmitionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeCompany_UI.DialogWindows"
        mc:Ignorable="d"
        Title="Подтверждение" 
        SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <TextBlock Text="Вы уверены, что хотите удалить поставку?" MaxWidth="150" TextWrapping="Wrap" Margin="10,10,5,0" Grid.ColumnSpan="2"></TextBlock>
        <WrapPanel Grid.Row="1" HorizontalAlignment="Left" Grid.ColumnSpan="3">
            <Button x:Name="Accept" IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="10,0,10,0" Content="ОК"></Button>
            <Button x:Name="Cancel" IsCancel="True" MinWidth="60" Content="Отмена" Margin="0,0,10,0"></Button>
        </WrapPanel>
    </Grid>
</Window>
