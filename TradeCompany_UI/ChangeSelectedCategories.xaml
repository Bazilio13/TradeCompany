<Window x:Class="TradeCompany_UI.ChangeSelectedCategories"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeCompany_UI"
        mc:Ignorable="d"
        Title="" Height="195" Width="382" FontSize="14">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0" Height="32">Отмена</Button>
            <Button x:Name="DeleteButton" IsCancel="True" MinWidth="60" Height="32" Width="143" Content="Удалить выбранные" Click="DeleteButton_Click"/>
        </WrapPanel>

        <StackPanel x:Name="StackPanel" Grid.RowSpan="2" Height="Auto" Margin="10,10,0,0"/>

    </Grid>
</Window>
