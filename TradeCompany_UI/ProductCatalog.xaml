<Page x:Class="TradeCompany_UI.ProductCatalog"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TradeCompany_UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductCatalog">

    <Grid Background="White" Margin="0,-16,-145,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button HorizontalAlignment="Center" Margin="0,15,0,0" Grid.Row="1" VerticalAlignment="Top" Height="30" Width="124" Background="White" BorderBrush="White" Click="ProductButton_Click">
            <StackPanel Height="30" Width="105" Orientation="Horizontal">
                <Image Margin="0,0,0,0" Width="19" Source="Pictures/Clients.png" />
                <TextBlock Margin="10,5,0,0" FontWeight="Bold" FontSize="14">Клиенты</TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="ProductButton" Margin="0,60,0,0" Grid.Row="1" VerticalAlignment="Top" Height="30" Background="White" BorderBrush="White" HorizontalAlignment="Left" Width="124" Click="ProductButton_Click">
            <StackPanel Height="30" Width="105" Orientation="Horizontal">
                <Image Margin="0,0,0,0" Source="Pictures/Products.png" Width="19"/>
                <TextBlock Margin="10,5,0,0" FontWeight="Bold" FontSize="14">Товары</TextBlock>
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Center" Margin="0,105,0,0" Grid.Row="1" VerticalAlignment="Top" Height="30" Width="124" Background="White" BorderBrush="White">
            <StackPanel Height="30" Width="105" Orientation="Horizontal">
                <Image Margin="0,0,0,0" Source="Pictures/Supplies.png" Width="19"/>
                <TextBlock Margin="10,5,0,0" FontWeight="Bold" FontSize="14">Поставки</TextBlock>
            </StackPanel>
        </Button>
        <Button x:Name="OrdersButton" HorizontalAlignment="Center" Margin="0,150,0,0" Grid.Row="1" VerticalAlignment="Top" Height="30" Width="124" Background="White" BorderBrush="White" Click="OrdersButton_Click">
            <StackPanel Height="30" Width="105" Orientation="Horizontal">
                <Image Margin="0,0,0,0" Source="Pictures/Orders.png" Width="19"/>
                <TextBlock Margin="10,5,0,0" FontWeight="Bold" FontSize="14">Заказы</TextBlock>
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Center" Margin="0,195,0,0" Grid.Row="1" VerticalAlignment="Top" Height="30" Width="124" Background="White" BorderBrush="White">
            <StackPanel Height="30" Width="105" Orientation="Horizontal">
                <Image Margin="0,0,0,0" Source="Pictures/Orders.png" Width="19"/>
                <TextBlock Margin="10,5,0,0" FontWeight="Bold" FontSize="14">Статистика</TextBlock>
            </StackPanel>
        </Button>
        <Button HorizontalAlignment="Center" Margin="0,240,0,0" Grid.Row="1" VerticalAlignment="Top" Height="30" Width="124" Background="White" BorderBrush="White">
            <StackPanel Height="30" Width="105" Orientation="Horizontal">
                <Image Margin="0,0,0,0" Source="Pictures/settings.png" Width="19"/>
                <TextBlock Margin="10,5,0,0" FontWeight="Bold" FontSize="14">Настройки</TextBlock>
            </StackPanel>
        </Button>
        <DataGrid x:Name="dgProductCatalog" Width="800"  FontSize="16"  AutoGenerateColumns="False" CanUserAddRows ="False" CanUserDeleteRows="False" Grid.Row="1" Grid.Column="1" Background="White" HorizontalAlignment="Left">
            <DataGrid.Columns>
                <DataGridTextColumn Binding ="{Binding Path = ID}"  IsReadOnly="True" Header="id" Width="30"/>
                <DataGridTextColumn Binding ="{Binding Path = Name}"  IsReadOnly="True" Header="Наименование" Width="150"/>
                <DataGridTextColumn Binding ="{Binding Path = StockAmount}" IsReadOnly="True" Header="Остаток" Width="90"/>
                <DataGridTextColumn Binding ="{Binding Path = MeasureUnitName}" IsReadOnly="True" Header="Ед. измер." Width="100" />
                <DataGridTextColumn Binding ="{Binding Path = WholesalePrice}" IsReadOnly="True" Header="Цена опт." Width="100"/>
                <DataGridTextColumn Binding ="{Binding Path = RetailPrice}" IsReadOnly="True" Header="Цена розн." Width="100"/>
                <DataGridTextColumn Binding ="{Binding Path = LastSupplyDate}" IsReadOnly="True" Header="Дата посл. поставки" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox x:Name="ProductSearch" Grid.Column="1" HorizontalAlignment="Left" Margin="10,60,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" Height="25" TextChanged="textChange"/>
        <ComboBox x:Name="ProductGroupSelect" Grid.Column="1" Margin="248,62,433,16"  SelectionChanged="ProductGroupSelect_SelectionChanged" SelectedIndex="0"/>
        <Button x:Name="ApplyFilters" Content="Применить фильтр" Grid.Column="1" Margin="675,25,20,50" Click="ApplyFilters_Click"/>
        <DatePicker Grid.Column="1" Margin="437,53,282,15"/>
        <DatePicker Grid.Column="1" Margin="561,53,157,15"/>
        <TextBlock TextWrapping="Wrap" Grid.Column="1" Margin="10,22,736,52" FontSize="14"><Run Language="ru-ru" Text="Остаток от:"/></TextBlock>
        <TextBox TextWrapping="Wrap" Grid.Column="1" Margin="89,20,674,50" BorderBrush="Black" VerticalAlignment="Center" VerticalContentAlignment="Center" Text="" TextAlignment="Center"/>
        <TextBlock TextWrapping="Wrap" Grid.Column="1" Margin="155,26,644,56"><Run Language="ru-ru" Text="до:"/></TextBlock>
        <TextBox Text="" TextWrapping="Wrap" Grid.Column="1" Margin="181,26,582,0" BorderBrush="Black" VerticalAlignment="Top" VerticalContentAlignment="Center" TextAlignment="Center" Width="57" Height="18"/>
        <TextBlock TextWrapping="Wrap" Grid.Column="1" Margin="259,18,487,56" FontSize="14"><Run Language="ru-ru" Text="Цена от:"/></TextBlock>
        <TextBox TextWrapping="Wrap" Grid.Column="1" Margin="338,22,425,0" BorderBrush="Black" VerticalAlignment="Top" VerticalContentAlignment="Center" Text="" TextAlignment="Center"/>
        <TextBlock TextWrapping="Wrap" Grid.Column="1" Margin="405,22,395,60"><Run Language="ru-ru" Text="до:"/></TextBlock>
        <TextBox Text="" TextWrapping="Wrap" Grid.Column="1" Margin="431,22,333,0" BorderBrush="Black" VerticalAlignment="Top" VerticalContentAlignment="Center" TextAlignment="Center" Height="18"/>
        <RadioButton Content="Розница" Grid.Column="1" Margin="492,6,203,73" IsChecked="True" FontSize="14"/>
        <RadioButton Content="Опт" RenderTransformOrigin="4.365,2.474" Grid.Column="1" Margin="492,27,203,50" FontSize="14"/>

    </Grid>
</Page>
