<Window x:Class="TradeCompany_UI.DialogWindows.ConfirmitionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeCompany_UI.DialogWindows"
        mc:Ignorable="d"
        Title="Подтверждение" 
        SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Text" TextWrapping="Wrap" Margin="10,10,10,10" Grid.ColumnSpan="2" HorizontalAlignment="Center"></TextBlock>
        <StackPanel Grid.Row="1" Margin="10,0,10,10" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="Accept" IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="10,0,10,0" Content="ОК"></Button>
            <Button x:Name="Cancel" IsCancel="True" MinWidth="60" Content="Отмена" Margin="0,0,10,0"></Button>
        </StackPanel>
    </Grid>
</Window>
