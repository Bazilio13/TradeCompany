<Window x:Class="TradeCompany_UI.Pop_ups.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeCompany_UI.Pop_ups"
        mc:Ignorable="d"
        Title="Уведомление" 
        SizeToContent="WidthAndHeight">
    <Grid MinWidth="200">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Text" TextWrapping="Wrap" Margin="10,10,10,10" Grid.ColumnSpan="2"></TextBlock>
        <Button x:Name="Accept" IsDefault="True" Click="Accept_Click" Grid.Row="1" Margin="10,0,10,10" Grid.ColumnSpan="3" MinWidth="60" HorizontalAlignment="Center" Content="ОК"></Button>
    </Grid>
</Window>
